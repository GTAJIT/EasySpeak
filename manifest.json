{
    "manifest_version": 3,
    "name": "EasySpeak",
    "version": "1.0",
    "description": "A Real-time speech and sign language translator.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            // "16": "images/icon16.png",
            // "48": "images/icon48.png",
            // "128": "images/icon128.png"
        }
    },
    "icons": {
        // "16": "images/icon16.png",
        // "48": "images/icon48.png",
        // "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}