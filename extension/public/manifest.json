{
  "manifest_version": 3,
  "name": "EasySpeak",
  "version": "1.0",
  "description": "A Real-time speech and sign language translator.",
  "permissions": ["storage", "activeTab", "scripting","sidePanel", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to open EasySpeak",
    
    "default_icon": {
      "128": "assets/logo.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "128": "assets/logo.png"
  }
}
